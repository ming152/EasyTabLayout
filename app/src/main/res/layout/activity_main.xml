<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ming.easytablayout.MainActivity">

    <com.example.ming.easytablayout.EasyTabLayout
        android:id="@+id/activity_easyTabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:textSize="15sp"
        app:tabIndicatorHeight="2dp"
        app:tabIndicatorColor="@color/tabSelectColor"
        app:tabSelectedTextColor="@color/tabSelectColor">
    </com.example.ming.easytablayout.EasyTabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>
